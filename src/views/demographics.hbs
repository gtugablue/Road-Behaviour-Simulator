{{> navbar }}
<div class="first-after-navbar">
    <div class="container">
        {{> breadcrumb }}
        <h2>Welcome {{ user_firstname }}</h2>
        <br/>
        <br/>
        <h3>Please fill out the following demographic questions:</h3>
        <br/>
        <br/>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form method="post" action="api/demographics">
                    <label for="form-birthday">Birthday:</label>
                    <input id="form-birthday" name="birthday" type="date" name="bday" required>
                    <br/>
                    <br/>
                    <br/>
                    <label for="form-birthday">Gender:</label>

                    <label class="radio-inline">
                        <input type="radio" name="gender" value="1">Male
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="gender" value="2">Female
                    </label>
                    <label class="radio-inline">
                        <input type="radio" name="gender" value="3">Other
                    </label>

                    <br/>
                    <br/>
                    <label style="width: 100%">
                        <span>Country of residence:</span>
                        <select name="country" class="form-control-inline form-control">
                            {{#each countries}}
                            <option>{{this}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <br/>
                    <br/>
                    <label style="width: 100%">
                        <span>Level of education:</span>
                        <select name="education" class="form-control-inline form-control">
                            {{#each educationLevels}}
                            <option>{{this}}</option>
                            {{/each}}
                        </select>
                    </label>
                    <br/>
                    <br/>
                    <div class="checkbox">
                        <label><input name="driver_license" id="form-drivers-license" type="checkbox" value="">Do you have a driver's license?</label>
                    </div>
                    <div class="demographics-form-optional">
                        <br/>
                        <label for="form-years">Experience in years:</label>
                        <input name="driver_experience" type="number" id="form-years" name="quantity" min="0" max="100" value="0">
                    </div>
                    <br/>
                    <br/>
                    <div class="form-center-wrapper">
                        <button type="submit" id="submit-button" class="btn btn-lg btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
</div>

<script src="javascripts/demographics.js"></script>